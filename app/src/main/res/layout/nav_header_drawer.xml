<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/greyBackground"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

  <ProgressBar
      android:id="@+id/header_progress"
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:indeterminate="false"
      android:progress="15"
      android:progressDrawable="@drawable/progress_bar"
      style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
      android:layout_above="@+id/header_coins"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="5dp"
      />
  <TextView
      android:id="@+id/header_level"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Level 2"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@color/colorPrimary"
      android:textSize="14sp"
      android:textStyle="bold"
      android:layout_below="@+id/header_progress"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      />
  <TextView
      android:id="@+id/header_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ArnauBlanch"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@android:color/darker_gray"
      android:textSize="14sp"
      android:layout_alignBaseline="@+id/header_name"
      android:layout_alignBottom="@+id/header_name"
      android:layout_toRightOf="@+id/header_name"
      android:layout_toEndOf="@+id/header_name"
      android:layout_marginLeft="10dp"
      android:layout_marginStart="10dp"
      />
  <TextView
      android:id="@+id/header_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Arnau Blanch CortÃ¨s"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@android:color/background_dark"
      android:textSize="14sp"
      android:textStyle="bold"
      android:layout_above="@+id/header_progress"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="5dp"
      />
  <TextView
      android:id="@+id/header_coins"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:text="153"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@color/greyText"
      android:textSize="14sp"
      />
  <TextView
      android:id="@+id/header_xp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="11dp"
      android:layout_marginStart="11dp"
      android:layout_toEndOf="@+id/header_level"
      android:layout_toRightOf="@+id/header_level"
      android:text="276/1800"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@color/greyText"
      android:textSize="14sp"
      />
  <com.mikhaellopez.circularimageview.CircularImageView
      android:id="@+id/header_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/header_username"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="5dp"
      android:layout_marginRight="50dp"
      android:layout_marginEnd="50dp"
      android:layout_marginTop="25dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      />
  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/header_coins"
      android:src="@drawable/ic_coins"
      android:layout_below="@+id/header_progress"
      />

</RelativeLayout>
