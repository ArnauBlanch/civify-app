<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.civify.activity.fragments.event.EventDetailsFragment"
    tools:ignore="missingPrefix"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <!-- PICTURE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        >
      <ImageView
          android:id="@+id/item_event_picture"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:scaleType="fitXY"
          android:src="@drawable/ic_gallery"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="@dimen/album_title_padding"
          android:layout_marginLeft="@dimen/album_title_padding"
          android:layout_marginTop="@dimen/album_title_padding"
          android:layout_marginBottom="@dimen/album_title_padding"
          >
        <!-- BADGE + TITLE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
          <com.mikhaellopez.circularimageview.CircularImageView
              android:id="@+id/details_event_badge"
              android:layout_width="90dp"
              android:layout_height="90dp"
              android:src="@drawable/man"
              app:civ_border_width="1dp"
              app:civ_shadow="true"
              app:civ_shadow_radius="3"
              />
          <TextView
              android:id="@+id/details_event_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="vertical"
              android:text="Event title"
              android:textColor="#000000"
              android:textSize="25sp"
              fontPath="fonts/Nunito-Bold.ttf"
              />
        </LinearLayout>
        <!-- DESCRIPTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
          <TextView
              android:id="@+id/details_event_description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              fontPath="fonts/Nunito-Italic.ttf"
              android:text="It's a fake description due to design details view"/>
        </LinearLayout>
        <!-- PROGRESS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >
          <ProgressBar
              android:id="@+id/details_event_progressBar"
              android:layout_width="0px"
              android:layout_height="15dp"
              android:layout_weight="75"
              android:indeterminate="false"
              android:progressDrawable="@drawable/progress_bar"
              style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
              android:progress="60"
              />
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="15"
              android:gravity="end"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/details_event_progressTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                fontPath="fonts/Nunito-Bold.ttf"
                android:text="3/5"
                />
            <TextView
                android:id="@+id/details_event_progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_horizontal"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="60%"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>
</FrameLayout>
