<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.civify.activity.fragments.achievements.AchievementDetailsFragment"
    tools:ignore="missingPrefix"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >
      <LinearLayout
          android:id="@+id/layout_achievement_details_badge_coins_xp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/achievement_item_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/badgedefault"
            />
        <LinearLayout
            android:id="@+id/layout_coins_xp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            >
          <LinearLayout
              android:id="@id/coins_with_number"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end"
              android:orientation="horizontal"
              >
            <TextView
                android:id="@+id/achievement_details_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="55"
                android:textColor="#000"
                android:textSize="18sp"
                fontPath="fonts/Nunito-SemiBold.ttf"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_coins"
                />
          </LinearLayout>
          <TextView
              android:id="@+id/achievement_details_xp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end"
              android:text="100 xp"
              android:textColor="#000"
              android:textSize="18sp"
              fontPath="fonts/Nunito-SemiBold.ttf"
              />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="20dp"
          >
        <TextView
            android:id="@+id/achievement_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title example"
            android:textSize="30sp"
            fontPath="fonts/Nunito-Bold.ttf"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="141dp"
          android:orientation="horizontal"
          android:paddingTop="20dp"
          >
        <TextView
            android:id="@+id/achievement_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="bottom"
          android:paddingTop="20dp"
          android:paddingBottom="40dp"
          >
        <ProgressBar
            android:id="@+id/achievement_details_progressBar"
            android:layout_width="0px"
            android:layout_height="15dp"
            android:layout_weight="75"
            android:indeterminate="false"
            android:progress="15"
            android:progressDrawable="@drawable/progress_bar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            />
        <TextView
            android:id="@+id/achievement_details_progressText"
            android:layout_width="0px"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="15"
            android:gravity="center_horizontal"
            android:text="100%"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:textStyle="bold"
            />
      </LinearLayout>
    </LinearLayout>

</FrameLayout>
