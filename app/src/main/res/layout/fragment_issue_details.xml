<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.civify.activity.fragments.IssueDetailsFragment"
    >

  <LinearLayout
      android:id="@+id/mainLayout"
      android:layout_width="368dp"
      android:layout_height="551dp"
      android:layout_marginRight="10dp"
      android:orientation="vertical"
      >
      <ImageView
          android:id="@+id/eventView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="40"
          />
    <LinearLayout
        android:id="@+id/nameLikesShareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/nameText"
          android:layout_width="286dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:maxLines="2"
          android:scrollbars="horizontal"
          android:textSize="30sp"
          />
      <RelativeLayout
          android:id="@+id/likesShareLayout"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="right"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/likesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:text="+23"
            android:textColor="#27AE60"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:id="@+id/shareLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal"
            >
          <ImageView
              android:id="@+id/shareView"
              android:layout_width="19dp"
              android:layout_height="16dp"
              android:layout_gravity="center_vertical"
              android:background="@drawable/ic_share"
              />
          <TextView
              android:id="@+id/shareText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/share"

              />
        </LinearLayout>
      </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/categoryText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="@string/category"
          android:textSize="18sp"
          android:textStyle="bold"

          />
      <ImageView
          android:id="@+id/categoryView"
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="40dp"
          android:background="@drawable/ic_semaphore"
          />
      <TextView
          android:id="@+id/nameCategoryText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="Name Category"
          android:textSize="18sp"
          android:textStyle="bold"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/riskLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/riskQuestion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="@string/questionRisk"
          android:textSize="16sp"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/riskAnswer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="20dp"
          android:text="Yes/No"
          android:textColor="#27AE60"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:textSize="16sp"
        />
    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:id="@+id/streetLayout"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:orientation="vertical"
          android:layout_weight="50"
          >
      <TextView
          android:id="@+id/streetText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="bottom"
          android:textColor="#959595"
          android:textStyle="bold"
          android:maxLines="2"
          android:scrollbars="horizontal"
          />
       </LinearLayout>
      <LinearLayout
          android:id="@+id/timeDistanceLayout"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginRight="10dp"
          android:gravity="right"
          android:orientation="vertical"
          android:layout_weight="50"
          >
        <TextView
            android:id="@+id/sinceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#959595"
            android:maxLines="1"
        />
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textStyle="bold"
            android:maxLines="1"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="vertical"
        >
      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="142dp"
          android:gravity="bottom"
          android:orientation="vertical"
          android:paddingBottom="@dimen/activity_vertical_margin"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          android:paddingTop="@dimen/activity_vertical_margin"
          >

        <ProgressBar
            android:id="@+id/userProgress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_above="@+id/userCoins"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:indeterminate="false"
            android:progress="15"
            android:progressDrawable="@drawable/progress_bar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            />
        <TextView
            android:id="@+id/userLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userProgress"
            android:text="Level 2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/userUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/userName"
            android:layout_alignBottom="@+id/userName"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/userName"
            android:layout_toRightOf="@+id/userName"
            android:text="ArnauBlanch"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userProgress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:text="Arnau Blanch CortÃ¨s"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/userCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="153"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/greyText"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/userxp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/userLevel"
            android:layout_toRightOf="@+id/userLevel"
            android:text="276/1800"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/greyText"
            android:textSize="14sp"
            />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userUsername"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/man"
            />
        <ImageView
            android:id="@+id/coinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProgress"
            android:layout_toLeftOf="@+id/userCoins"
            android:src="@drawable/ic_coins"
            />

      </RelativeLayout>

    </LinearLayout>
  </LinearLayout>

</FrameLayout>
